# ===========================================
# DEX TRADING BOT - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in values

# Mode: READ_ONLY | PAPER | LIVE
MODE=PAPER

# ===== CHAIN RPCs (Free public endpoints) =====
BSC_RPC=https://bsc-dataseed.binance.org
BASE_RPC=https://mainnet.base.org
SOLANA_RPC=https://api.mainnet-beta.solana.com

# ===== WALLET (Required for LIVE mode only) =====
# NEVER COMMIT REAL KEYS! Use a hot wallet with limited funds
EVM_PRIVATE_KEY=
SOLANA_PRIVATE_KEY=

# ===== RISK PARAMETERS =====
MAX_TRADES_PER_DAY=15
RISK_PER_TRADE=5
MAX_DAILY_DRAWDOWN=15
STOP_LOSS_PERCENT=5
MAX_HOLD_MINUTES=30

# ===== TAKE PROFIT =====
# Bot will prompt for this on startup if not set
PROFIT_MULTIPLIER=

# ===== EXECUTION =====
MAX_RETRIES=3
RETRY_DELAY_MS=2000
SLIPPAGE_TOLERANCE=5

# ===== ENABLED CHAINS =====
ENABLE_BSC=true
ENABLE_BASE=true
ENABLE_SOLANA=true

# ===== LIVE TRADING (DANGER) =====
# Set to true ONLY when ready for real trades
ENABLE_LIVE_TRADING=false

# ===== TELEGRAM NOTIFICATIONS =====
# Create a bot via @BotFather and get your chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
